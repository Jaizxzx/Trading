import time
from datetime import datetime, timedelta
from binance.client import Client
from binance.enums import *
import pytz

# Initialize Binance client and API Keys
api_key = ''  # Replace with your actual API key
api_secret = ''  # Replace with your actual API secret
client = Client(api_key, api_secret)

# Trading parameters
symbol = 'BTCUSDT'
timeframe = Client.KLINE_INTERVAL_5MINUTE

# New York timezone
ny_tz = pytz.timezone('America/New_York')

# Hardcoded date range
START_DATE = datetime(2024, 9, 8)
END_DATE = datetime(2024, 9, 9)

def get_ny_midnight(date):
    midnight = datetime.combine(date, datetime.min.time())
    return ny_tz.localize(midnight, is_dst=None)

def get_candles(start_time):
    start_time_utc = start_time.astimezone(pytz.UTC)
    end_time_utc = start_time_utc + timedelta(minutes=10)
    
    klines = client.get_klines(
        symbol=symbol,
        interval=timeframe,
        startTime=int(start_time_utc.timestamp() * 1000),
        endTime=int(end_time_utc.timestamp() * 1000),
        limit=2
    )
    return [
        {
            'open_time': datetime.fromtimestamp(kline[0] / 1000, tz=pytz.UTC).astimezone(ny_tz),
            'open': float(kline[1]),
            'high': float(kline[2]),
            'low': float(kline[3]),
            'close': float(kline[4])
        }
        for kline in klines
    ]

def print_candle_info(candle, candle_number):
    print(f"Candle {candle_number}:")
    print(f"Time (NY): {candle['open_time'].strftime('%Y-%m-%d %H:%M:%S %Z')}")
    print(f"Open: {candle['open']}")
    print(f"High: {candle['high']}")
    print(f"Low: {candle['low']}")
    print(f"Close: {candle['close']}")
    print("------------------------")

def analyze_candles(candles, moves):
    if len(candles) < 2:
        print("Not enough candles to analyze.")
        return moves

    first_candle = candles[0]
    second_candle = candles[1]

    print_candle_info(first_candle, 1)
    print_candle_info(second_candle, 2)

    max_moves = 2

    # Initial Long
    if second_candle['close'] > first_candle['close'] and moves < max_moves:
        open_price = second_candle['close']
        stop_loss = first_candle['low']
        take_profit = open_price + 2 * (open_price - stop_loss)

        print("Signal: Initial Long")
        print(f"Open Price (Limit Order): {open_price}")
        print(f"Stop Loss: {stop_loss}")
        print(f"Take Profit: {take_profit}")
        print("------------------------")
        moves += 1

        # Flip Short
        if moves < max_moves:
            print("Potential Flip Short:")
            print(f"If price falls below: {first_candle['low']}")
            print(f"Open Price (Limit Order): {first_candle['low']}")
            print(f"Stop Loss: {first_candle['high']}")
            print(f"Take Profit: {first_candle['low'] - (first_candle['high'] - first_candle['low'])}")
            print("------------------------")

    # Initial Short
    elif second_candle['close'] < first_candle['close'] and moves < max_moves:
        open_price = second_candle['close']
        stop_loss = first_candle['high']
        take_profit = open_price - 2 * (stop_loss - open_price)

        print("Signal: Initial Short")
        print(f"Open Price (Limit Order): {open_price}")
        print(f"Stop Loss: {stop_loss}")
        print(f"Take Profit: {take_profit}")
        print("------------------------")
        moves += 1

        # Flip Long
        if moves < max_moves:
            print("Potential Flip Long:")
            print(f"If price rises above: {first_candle['high']}")
            print(f"Open Price (Limit Order): {first_candle['high']}")
            print(f"Stop Loss: {first_candle['low']}")
            print(f"Take Profit: {first_candle['high'] + (first_candle['high'] - first_candle['low'])}")
            print("------------------------")

    else:
        print("No initial signal or maximum moves reached.")

    return moves

def main():
    current_date = START_DATE
    while current_date <= END_DATE:
        ny_midnight = get_ny_midnight(current_date)
        print(f"\nAnalyzing candles for {ny_midnight.strftime('%Y-%m-%d %H:%M:%S %Z')}")
        
        trading_start = ny_midnight
        trading_end = trading_start + timedelta(hours=1)
        
        print(f"Trading window: {trading_start.strftime('%H:%M:%S')} - {trading_end.strftime('%H:%M:%S')} NY time")
        
        try:
            current_time = trading_start
            moves = 0
            while current_time < trading_end and moves < 2:
                candles = get_candles(current_time)
                
                if len(candles) < 2:
                    print(f"Not enough candles available for {current_time.strftime('%Y-%m-%d %H:%M:%S %Z')}.")
                else:
                    moves = analyze_candles(candles, moves)
                
                current_time += timedelta(minutes=5)
                time.sleep(1)  # Add a small delay to avoid hitting rate limits
            
            if moves == 2:
                print("Maximum number of moves reached for the day.")
            elif current_time >= trading_end:
                print("Trading window closed for the day.")
        
        except Exception as e:
            print(f"An error occurred: {e}")
        
        current_date += timedelta(days=1)

if __name__ == "__main__":
    main()